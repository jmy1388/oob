rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /articles/{articleId} {
      // 1) 누구나 읽기 가능
      allow read: if true;

      // 2) 작성: 익명 포함 "인증된" 사용자만, authorId = 본인 uid
      allow create: if request.auth != null
        && request.resource.data.authorId == request.auth.uid;

      // 3) 수정: 좋아요(likeCount)만 변경하는 경우 누구나 가능, 그 외는 작성자만 가능
      allow update: if 
        // 좋아요만 변경하는 경우: 인증 없이도 허용
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount']))
        // 그 외 필드 수정: 작성자만 가능
        || (request.auth != null && resource.data.authorId == request.auth.uid);

      // 4) 삭제: 본인 글만 삭제 가능
      allow delete: if request.auth != null
        && resource.data.authorId == request.auth.uid;
    }
  }
}
